<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminaddcategory"
    android:orientation="horizontal">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@android:color/holo_green_light"
        app:title="Add Category "
        app:titleTextColor="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Login For Insertion"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvadmin"
        android:textColor="#88DA03"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvadmin"
        android:id="@+id/layout1"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/addcategory"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:hint="Add Category"
            android:textAlignment="center"
            android:background="@drawable/edittext_layout"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Category"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/subcategory"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:hint="Add sub Category"
            android:textAlignment="center"
            android:background="@drawable/edittext_layout"
            tools:ignore="RtlCompat"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout3"
        android:layout_below="@id/layout2"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Brand"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/addbrand"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:ems="10"
            android:hint="Add Brand"
            android:textAlignment="center"
            android:background="@drawable/edittext_layout"
            tools:ignore="RtlCompat"/>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:text="Add Data"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/button_layout"
        android:id="@+id/adddata"
        />
    <Button
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:text="BACK"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:background="@drawable/button_layout"
        android:id="@+id/btnback"
        />

</RelativeLayout>